<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/MyCarblack"
            android:background="@drawable/returnactivity"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />
        <TextView
            android:textColor="#38adce"
            android:textSize="50sp"
            android:background="#8ec9e1"
            android:gravity="center"
            android:text="停车查询"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前停车费率："/>
        <TextView
            android:id="@+id/count"
            android:layout_marginLeft="200dp"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX元/次"/>
        <Button
            android:id="@+id/park_rate"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/query"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改停车费率："/>
        <EditText
            android:id="@+id/park_startrate"
            android:layout_marginLeft="100dp"
            android:background="@drawable/mycartopup"
            android:textSize="35sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="费率"/>
        <EditText
            android:id="@+id/park_unit"
            android:layout_marginLeft="100dp"
            android:background="@drawable/mycartopup"
            android:textSize="35sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="计价单位"/>
        <Button
            android:id="@+id/park_update"
            android:layout_marginLeft="125dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/query"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前车位查询："/>
        <Button
            android:id="@+id/park_query_carid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/query"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/car1"
            android:layout_marginLeft="300dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            />
        <ImageView
            android:id="@+id/car2"
            android:layout_marginLeft="60dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="1号"/>
        <TextView
        android:layout_marginLeft="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="2号"/>
    </LinearLayout>
</LinearLayout>