<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/MyCarblack"
            android:background="@drawable/returnactivity"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />
        <TextView
            android:textColor="#38adce"
            android:textSize="50sp"
            android:background="#8ec9e1"
            android:gravity="center"
            android:text="我的座驾"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mycar"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mycar"/> <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mycar"/> <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mycar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myCarState1"
            android:gravity="center"
            android:textSize="35dp"
            android:text="停止"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myCarState2"
            android:gravity="center"
            android:textSize="35dp"
            android:text="停止"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myCarState3"
            android:gravity="center"
            android:textSize="35dp"
            android:text="停止"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myCarState4"
            android:gravity="center"
            android:textSize="35dp"
            android:text="停止"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/MyCarBitton1"
            android:layout_marginLeft="85dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/startmycar" />
        <Button
            android:id="@+id/MyCarBitton2"
            android:layout_marginLeft="180dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/startmycar" />
        <Button
            android:id="@+id/MyCarBitton3"
            android:layout_marginLeft="160dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/startmycar" />
        <Button
            android:id="@+id/MyCarBitton4"
            android:layout_marginLeft="150dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/startmycar" />
    </LinearLayout>
    <Button
        android:id="@+id/MyCar_queryTop"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="1000dp"
        android:background="@drawable/querytop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>